<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_grey"
    tools:context=".Fragments.Fragment_dashboard">

<!--CONTENT-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/settings_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/setting_user_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User details"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/activity_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/setting_user_details"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:id="@+id/mobile_device_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mobile_device_serial_number"
                    android:textSize="@dimen/activity_button_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mobile_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mobile_device_name"
                    android:textSize="@dimen/activity_button_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/company_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="company_id"
                    android:textSize="@dimen/activity_button_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="company_name"
                    android:textSize="@dimen/activity_button_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/department_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="department_id"
                    android:textSize="@dimen/activity_button_text"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/department_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="department_name"
                    android:textSize="@dimen/activity_button_text"
                    android:textStyle="normal"
                    android:layout_marginBottom="16dp"/>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/settings_logout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        card_view:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/profile_logout_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Log out"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/activity_button_text"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_management_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_below="@+id/settings_content"
                >

                <TextView
                    android:id="@+id/setting_functions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Management"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/activity_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/setting_title"
                    android:layout_marginBottom="8dp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settings_upload_data"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    card_view:cardCornerRadius="20dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/settings_upload_data_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Download task data"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/activity_button_text"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/settings_upload_records_to_national"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    card_view:cardCornerRadius="20dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/settings_upload_records_to_national_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Upload Records to National"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/activity_button_text"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_Developer_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_below="@+id/settings_management_data"
                >

                <TextView
                    android:id="@+id/setting_developer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer Section"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/activity_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/setting_developer_title"
                    android:layout_marginBottom="8dp"
                    />



                <androidx.cardview.widget.CardView
                    android:id="@+id/settings_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    card_view:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Clear local data"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/activity_button_text"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/settings_test_token"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    card_view:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Get Token"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/activity_button_text"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

<!--PROGRESS BAR-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settings_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/white"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            >

            <ProgressBar
                android:id="@+id/settings_progressbar_spin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:theme="@style/AppTheme.ProgressBar"
                android:layout_marginEnd="8dp"
                />

            <ImageView
                android:id="@+id/settings_progressbar_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/settings_progressbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textStyle="normal"
                android:textColor="@color/green"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>